<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.iqquiz2.LogicalQuestions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardViewBackgroundColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            android:layout_marginTop="@dimen/fragmentCardMargin"
            android:layout_marginLeft="@dimen/fragmentCardMargin"
            android:layout_marginRight="@dimen/fragmentCardMargin"
            >

            <LinearLayout
                android:id="@+id/logicQuestion1_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/splashPageBackgroundColor"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:text="@string/logicalQuestion1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/questionTextColor"
                    android:layout_marginTop="@dimen/questionTopMargin"
                    android:layout_marginLeft="@dimen/questionLeftMargin"
                    android:layout_marginRight="@dimen/questionRightMargin"
                    android:textSize="@dimen/longQuestionTextSize"
                    />

                <EditText
                    android:id="@+id/logicQuestion1_FragmentInput"
                    android:hint="@string/logicalQuestion1HintText"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/questionTopMargin"
                    android:layout_marginLeft="@dimen/questionLeftMargin"
                    android:layout_marginRight="@dimen/questionRightMargin"
                    android:layout_marginBottom="@dimen/questionTopMargin"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fragmentCardMargin"
            android:layout_marginLeft="@dimen/fragmentCardMargin"
            android:layout_marginRight="@dimen/fragmentCardMargin"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            >

            <LinearLayout
                android:id="@+id/logicQuestion2_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/splashPageBackgroundColor"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:text="@string/logicalQuestion2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/longQuestionTextSize"
                    android:layout_marginTop="@dimen/questionTopMargin"
                    android:layout_marginLeft="@dimen/questionLeftMargin"
                    android:layout_marginRight="@dimen/questionRightMargin"
                    android:textColor="@color/questionTextColor"
                    />

                <RadioGroup
                    android:id="@+id/logicQuestion2_Frag_RadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/radioGroupTopMargin"
                    android:layout_marginBottom="@dimen/questionTopMargin"
                    >
                    <RadioButton
                        android:id="@+id/logicQuestion2_Frag_Button1"
                        android:text="@string/logicalQuestion2RadioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion2_Frag_Button2"
                        android:text="@string/logicalQuestion2RadioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion2_Frag_Button3"
                        android:text="@string/logicalQuestion2RadioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion2_Frag_Button4"
                        android:text="@string/logicalQuestion2RadioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion2_Frag_Button5"
                        android:text="@string/logicalQuestion2RadioButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fragmentCardMargin"
            android:layout_marginLeft="@dimen/fragmentCardMargin"
            android:layout_marginRight="@dimen/fragmentCardMargin"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            >

            <LinearLayout
                android:id="@+id/logicQuestion3_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/splashPageBackgroundColor"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:text="@string/logicalQuestion3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/questionLeftMargin"
                    android:layout_marginRight="@dimen/questionRightMargin"
                    android:layout_marginTop="@dimen/questionTopMargin"
                    android:textColor="@color/questionTextColor"
                    android:textSize="@dimen/longQuestionTextSize" />

                <RadioGroup
                    android:id="@+id/logicQuestion3_Frag_RadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/radioGroupTopMargin"
                    android:layout_marginBottom="@dimen/questionTopMargin"
                    >
                    <RadioButton
                        android:id="@+id/logicQuestion3_Frag_Button1"
                        android:text="@string/logicalQuestion3RadioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion3_Frag_Button2"
                        android:text="@string/logicalQuestion3RadioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion3_Frag_Button3"
                        android:text="@string/logicalQuestion3RadioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion3_Frag_Button4"
                        android:text="@string/logicalQuestion3RadioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion3_Frag_Button5"
                        android:text="@string/logicalQuestion3RadioButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fragmentCardMargin"
            android:layout_marginLeft="@dimen/fragmentCardMargin"
            android:layout_marginRight="@dimen/fragmentCardMargin"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            >

            <LinearLayout
                android:id="@+id/logicQuestion4_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/splashPageBackgroundColor"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:text="@string/logicalQuestion4Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/longQuestionTextSize"
                    android:layout_marginTop="@dimen/questionTopMargin"
                    android:layout_marginLeft="@dimen/questionLeftMargin"
                    android:layout_marginRight="@dimen/questionRightMargin"
                    android:textColor="@color/questionTextColor"
                    />

                <ImageView
                    android:src="@drawable/lines"
                    android:layout_width="@dimen/linesLayoutWidth"
                    android:layout_height="@dimen/linesLayoutHeight"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/linestopMargin"
                    />

                <RadioGroup
                    android:id="@+id/logicQuestion4_Frag_RadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/radioGroupTopMargin"
                    android:layout_marginBottom="@dimen/questionTopMargin"
                    >
                    <RadioButton
                        android:id="@+id/logicQuestion4_Frag_Button1"
                        android:text="@string/logicalQuestion4RadioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion4_Frag_Button2"
                        android:text="@string/logicalQuestion4RadioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion4_Frag_Button3"
                        android:text="@string/logicalQuestion4RadioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/fragmentCardMargin"
            android:layout_marginLeft="@dimen/fragmentCardMargin"
            android:layout_marginRight="@dimen/fragmentCardMargin"
            android:layout_marginBottom="@dimen/fragmentCardMargin"
            card_view:cardCornerRadius="@dimen/cardCornerRadius"
            >

            <LinearLayout
                android:id="@+id/logicQuestion5_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/splashPageBackgroundColor"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:text="@string/logicalQuestion5Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/longQuestionTextSize"
                    android:layout_marginTop="@dimen/questionTopMargin"
                    android:layout_marginLeft="@dimen/questionLeftMargin"
                    android:layout_marginRight="@dimen/questionRightMargin"
                    android:textColor="@color/questionTextColor"
                    />

                <RadioGroup
                    android:id="@+id/logicQuestion5_Frag_RadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/radioGroupTopMargin"
                    android:layout_marginBottom="@dimen/questionTopMargin"
                    >
                    <RadioButton
                        android:id="@+id/logicQuestion5_Frag_Button1"
                        android:text="@string/logicalQuestion5RadioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion5_Frag_Button2"
                        android:text="@string/logicalQuestion5RadioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion5_Frag_Button3"
                        android:text="@string/logicalQuestion5RadioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion5_Frag_Button4"
                        android:text="@string/logicalQuestion5RadioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                    <RadioButton
                        android:id="@+id/logicQuestion5_Frag_Button5"
                        android:text="@string/logicalQuestion5RadioButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/radioButtonTextSize"
                        android:textColor="@color/questionTextColor"
                        />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/saveButton"
                    android:text="@string/submitAnswerButton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/buttonTextColor"
                    android:background="@drawable/rounded_button"
                    android:textSize="@dimen/buttonTextSize"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/submitAnswerButtonTopMargin"
                    android:layout_marginBottom="@dimen/submitAnswerButtonBottomMargin"
                    android:paddingLeft="@dimen/submitAnswerButtonPaddingLeft"
                    android:paddingRight="@dimen/submitAnswerButtonPaddingRight"
                    />

            </LinearLayout>

    </LinearLayout>

</ScrollView>